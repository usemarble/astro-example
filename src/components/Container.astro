---
import type { HTMLAttributes } from 'astro/types';
import { cn } from '@/lib/utils';

interface Props extends HTMLAttributes<'div'> {}
const { class: classNames, ...attrs } = Astro.props;
---

<div
  class={cn('mx-auto w-full h-full max-w-6xl px-6 md:px-14 lg:px-20 z-10', classNames)}
  {...attrs}
>
  <slot />
</div>
